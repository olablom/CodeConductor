{
  "$schema": "https://schema.tauri.app/config/2",
  "identifier": "com.codeconductor.desktop",
  "productName": "CodeConductor",
  "version": "0.1.0",
  "build": {
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1421"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "CodeConductor - Personal AI Development Platform",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "decorations": true,
        "transparent": false,
        "visible": true,
        "closable": true,
        "minimizable": true,
        "maximizable": true,
        "skipTaskbar": false,
        "alwaysOnTop": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": false,
    "icon": []
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
} 
